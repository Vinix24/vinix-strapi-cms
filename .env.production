# Server Configuration
HOST=0.0.0.0
PORT=1337
NODE_ENV=production

# Security Keys (Replace these with secure values in Railway)
APP_KEYS=replace-with-secure-keys
API_TOKEN_SALT=replace-with-secure-salt
ADMIN_JWT_SECRET=replace-with-secure-jwt-secret
JWT_SECRET=replace-with-secure-jwt-secret
TRANSFER_TOKEN_SALT=replace-with-secure-salt

# Database Configuration
DATABASE_CLIENT=postgres
# Railway will automatically inject these values
DATABASE_URL=
DATABASE_HOST=
DATABASE_PORT=
DATABASE_NAME=
DATABASE_USERNAME=
DATABASE_PASSWORD=

# SSL Configuration
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=false

# Admin Configuration
ADMIN_PATH=/admin

# CORS Configuration
CORS_ORIGIN=https://vinixconsulting.nl

# Media Upload Configuration (Optional)
# If using Cloudinary, uncomment and set these
# CLOUDINARY_NAME=
# CLOUDINARY_KEY=
# CLOUDINARY_SECRET=
